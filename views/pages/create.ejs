<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="card p-4 shadow" style="width: 100%; max-width: 500px;">
    <form id="createForm" action="/post/store" method="POST" enctype="multipart/form-data">
      <% if (errors.length > 0) { %>
        <ul class="list-group my-5">
          <% errors.forEach(msg => { %>
            <li class="list-group-item list-group-item-danger"><%= msg %></li>
          <% }) %>
        </ul>
      <% } %>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" required>
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Description</label>
        <textarea class="form-control" id="body" name="body" placeholder="Enter a description" style="height: 12rem" required></textarea>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="file" class="form-control" id="image" name="image" required>
      </div>
      <button type="submit" class="btn btn-primary w-100">Create</button>
    </form>
  </div>
</div>
